<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">

    <f:entry title="${%projectId}" field="projectId" help="/plugin/dependency-track/help-dt-projectid.html">
        <f:select id="projectId"/>
    </f:entry>

    <f:entry title="${%artifact}" field="artifact" help="/plugin/dependency-track/help-dt-artifact.html">
        <f:textbox id="artifact"/>
    </f:entry>

    <f:entry name="artifactType" title="${%artifactType.choose}" field="artifactType">
        <select name="artifactType">
            <option selected="${instance.artifactType.equals('bom')? 'true':null}" value="bom">${%artifactType.bom}</option>
            <option selected="${instance.artifactType.equals('scanResult')? 'true':null}" value="scanResult">${%artifactType.scanResult}</option>
        </select>
    </f:entry>

    <f:entry title="${%enable.synchronous}" field="synchronous" description="" help="/plugin/dependency-track/help-dt-synchronous-mode.html">
        <f:checkbox name="synchronous" checked="${instance.isSynchronous()}"/>
    </f:entry>

    <f:advanced title="Risk Gate Thresholds" align="left">
        <f:section title="Risk Gate Thresholds - Synchronous Mode Only">
            <f:entry title="${%Total Findings}" help="/plugin/dependency-track/help-thresholds-total.html">
                <table>
                    <thead>
                        <tr>
                            <td width="24"></td>
                            <td width="25%">${%Critical}</td>
                            <td width="25%">${%High}</td>
                            <td width="25%">${%Medium}</td>
                            <td width="25%">${%Low}</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="vertical-align: middle;">
                                <img src="${resURL}/plugin/dependency-track/icons/yellow.svg" width="24" height="24"/>
                            </td>
                            <td>
                                <f:number field="unstableTotalCritical" value="${instance.unstableTotalCritical}"/>
                            </td>
                            <td>
                                <f:number field="unstableTotalHigh" value="${instance.unstableTotalHigh}"/>
                            </td>
                            <td>
                                <f:number field="unstableTotalMedium" value="${instance.unstableTotalMedium}"/>
                            </td>
                            <td>
                                <f:number field="unstableTotalLow" value="${instance.unstableTotalLow}"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align: middle;">
                                <img src="${resURL}/plugin/dependency-track/icons/red.svg" width="24" height="24"/>
                            </td>
                            <td>
                                <f:number field="failedTotalCritical" value="${instance.failedTotalCritical}"/>
                            </td>
                            <td>
                                <f:number field="failedTotalHigh" value="${instance.failedTotalHigh}"/>
                            </td>
                            <td>
                                <f:number field="failedTotalMedium" value="${instance.failedTotalMedium}"/>
                            </td>
                            <td>
                                <f:number field="failedTotalLow" value="${instance.failedTotalLow}"/>
                            </td>
                        </tr>
                        <!--
                        <tr>
                            <td colspan="4">
                                <f:checkbox name="totalThresholdAnalysisExploitable" checked="${instance.totalThresholdAnalysisExploitable}" title="${%Limit to audited exploitable}"/>
                            </td>
                        </tr>
                        -->
                    </tbody>
                </table>
            </f:entry>

            <f:entry title="${%New Findings}" help="/plugin/dependency-track/help-thresholds-new.html">
                <table>
                    <thead>
                        <tr>
                            <td width="24"></td>
                            <td width="25%">${%Critical}</td>
                            <td width="25%">${%High}</td>
                            <td width="25%">${%Medium}</td>
                            <td width="25%">${%Low}</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="vertical-align: middle;">
                                <img src="${resURL}/plugin/dependency-track/icons/yellow.svg" width="24" height="24"/>
                            </td>
                            <td>
                                <f:number field="unstableNewCritical" value="${instance.unstableNewCritical}"/>
                            </td>
                            <td>
                                <f:number field="unstableNewHigh" value="${instance.unstableNewHigh}"/>
                            </td>
                            <td>
                                <f:number field="unstableNewMedium" value="${instance.unstableNewMedium}"/>
                            </td>
                            <td>
                                <f:number field="unstableNewLow" value="${instance.unstableNewLow}"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align: middle;">
                                <img src="${resURL}/plugin/dependency-track/icons/red.svg" width="24" height="24"/>
                            </td>
                            <td>
                                <f:number field="failedNewCritical" value="${instance.failedNewCritical}"/>
                            </td>
                            <td>
                                <f:number field="failedNewHigh" value="${instance.failedNewHigh}"/>
                            </td>
                            <td>
                                <f:number field="failedNewMedium" value="${instance.failedNewMedium}"/>
                            </td>
                            <td>
                                <f:number field="failedNewLow" value="${instance.failedNewLow}"/>
                            </td>
                        </tr>
                        <!--
                        <tr>
                            <td colspan="4">
                                <f:checkbox name="newThresholdAnalysisExploitable" checked="${instance.newThresholdAnalysisExploitable}" title="${%Limit to Audited Exploitable}"/>
                            </td>
                        </tr>
                        -->
                    </tbody>
                </table>
            </f:entry>
        </f:section>
    </f:advanced>

</j:jelly>